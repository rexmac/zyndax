<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
  <title>Zyndax Documentation</title>
  <parser>
    <target>docs/api</target>
    <markers>
      <item>TODO</item>
      <item>FIXME</item>
    </markers>
    <extensions>
      <extension>php</extension>
    </extensions>
    <visibility></visibility>
  </parser>
  <transformer>
    <target>docs/api</target>
  </transformer>
  <logging>
    <level>warn</level>
    <paths>
      <default>./docs/log/{DATE}.log</default>
      <errors>./docs/log/{DATE}.errors.log</errors>
    </paths>
  </logging>
  <transformations>
    <template name="./docs/zyndax" />
  </transformations>
  <files>
    <directory>application</directory>
    <directory>library</directory>
    <ignore>application/proxies/*</ignore>
  </files>
</phpdoc>
